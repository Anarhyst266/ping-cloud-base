kind: Kustomization
apiVersion: kustomize.config.k8s.io/v1beta1

resources:
- ${K8S_GIT_URL}/k8s-configs/ping-cloud/${KUSTOMIZE_BASE}?ref=${K8S_GIT_BRANCH}

images:
- name: pingidentity/pingdirectory
  newName: ${REGISTRY_NAME}/pingidentity/pingdirectory
- name: pingidentity/pingfederate
  newName: ${REGISTRY_NAME}/pingidentity/pingfederate
- name: pingidentity/pingaccess
  newName: ${REGISTRY_NAME}/pingidentity/pingaccess

patchesJson6902:
# pingfederate runtime
- path: patches/ingress/pingfederate.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingfederate-ingress

# pingfederate admin
- path: patches/ingress/pingfederate-admin.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingfederate-admin-ingress

# pingaccess runtime
- path: patches/ingress/pingaccess.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingaccess-ingress

# pingaccess agent
- path: patches/ingress/pingaccess-agent.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingaccess-agent-ingress

# pingaccess admin
- path: patches/ingress/pingaccess-admin.yaml
  target:
    group: extensions
    version: v1beta1
    kind: Ingress
    name: pingaccess-admin-ingress

patchesStrategicMerge:
- patches/service/pingdirectory.yaml
- patches/secret/tls-secret.yaml
- patches/secret/devops-secret.yaml